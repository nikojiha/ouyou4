<div class='container px-5 px-sm-0'>
  <div class='row'>
    <table class='table'>
      <% if users.exists? %>
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% users.each do |user| %>
            <tbody>
              <tr>
                <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.followings.count %></td>
                <td>フォロワー数: <%= user.followers.count %></td>
                <td><%= link_to 'Show', user %></td>
              </tr>
            </tbody>
            <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </table>
  </div>
</div>